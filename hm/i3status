general {
    # output_format = "dzen2"
    interval = 5
    colors = true
    color_good = "#8C9440"
    color_bad = "#A54242"
    color_degraded = "#DE935F"
}

order += "disk /"
# order += "run_watch DHCP"
# order += "run_watch VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "battery all"
order += "tztime local"

wireless _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "W: %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip"
        format_down = "E: down"
}

battery all {
        integer_battery_capacity = true
        low_threshold = 30
        threshold_type = percentage
        format = "%status %percentage %remaining"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
